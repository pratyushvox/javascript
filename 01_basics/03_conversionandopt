//conversion into number
let score = "33abc"
console.log(typeof score);

let valueinnumber = Number(score); //changing in to number
console.log(typeof valueinnumber);
console.log(valueinnumber);

// changing in to number what if?

// "33" => 33
//"33abc" => NaN
// true => 1
//false => o

//conversion into boolean

let isloggedin = 0
let booleanisloggedin = Boolean(isloggedin);
console.log(booleanisloggedin)
console.log(typeof isloggedin)

//conversion in to strings
let num = 33
let stringnum = String(num);
console.log(typeof(stringnum))
console.log(stringnum)

// ************** operation ***************//

let value = 4
let negvalue = -value
console.log(negvalue)

let str1 = "hello"
let str2 = " pratyush "
let str3 = str1+str2; //string concatination

console.log(str3)

let counter = 100

counter++;
console.log(counter)

++counter;
console.log(counter);

// prefix and postfix 
//prefix statement
let y = 4
let c = y++
let d = y+c;
//postfix statement
let a = 6
let b = ++a;
let e = a+b ;
console.table([y ,c ,a , b, d , e]);
