 let name2 = name1.substring(0,6)
 console.log(name2);
 name3 = name1.substring(0,4);
 console.log(name3);

//slicing
//only in slice negative value can be given
 let anotherstring = name1.slice(-6,4);
 console.log(anotherstring);

